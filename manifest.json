{
  "manifest_version": 3,
  "name": "WordWatch",
  "version": "1.0",
  "description": "A draggable black overlay with customizable opacity",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/wanakana.min.js",
        "lib/kuroshiro.min.js",
        "lib/kuroshiro-analyzer-kuromoji.min.js",
        "content.js"
      ],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WordWatch"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/wanakana.min.js",
        "lib/kuroshiro.min.js",
        "lib/kuroshiro-analyzer-kuromoji.min.js",
        "lib/dict/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self' data:;"
  }
}
